@using Microsoft.AspNetCore.Mvc.Localization
@model EmployeeOfficeViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Моят офис"];
}

<div class="container mt-5">
    <div class="row">
        <!-- Employee Info Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Години стаж: @Model.YearsOfExperience</h6>
                    <p class="card-text">В момента работи в:</p>
                    <p><strong>@Model.CommercialSiteName</strong></p>
                </div>
            </div>
        </div>

        <!-- Office Info Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Информация за търговския обект</h5>
                    <p class="card-text">Име: @Model.CommercialSiteName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Products Card -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Заявени продукти</h5>
                </div>
                <div class="card-body">
                    @if (Model.Products?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                <partial name="_ProductPartial" model="product" />
                            }
                        </div>
                    }
                    else
                    {
                        <p>В момента няма заявени продукти.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

