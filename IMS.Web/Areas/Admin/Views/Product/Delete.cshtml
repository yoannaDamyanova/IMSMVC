@model ProductDeleteViewModel

@{
    ViewData["Title"] = "Изтриване на продукт";
}

<div class="container">
    <h2 class="text-center m-3">@ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Delete" asp-controller="Product" method="post" class="card p-4 shadow-lg">
                <h4 class="text-center mb-4">Сигурни ли сте, че искате да изтриете този продукт?</h4>

                <div class="mb-3">
                    <p><strong>Име:</strong> @Model.Name</p>
                    <p><strong>Категория:</strong> @Model.CategoryName</p>
                    <p><strong>Производител:</strong> @Model.SupplierName.</p>
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Name" value="@Model.Name" />
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                    <input type="hidden" asp-for="@Model.CategoryName" value="@Model.CategoryName" />
                    <input type="hidden" asp-for="@Model.SupplierName" value="@Model.SupplierName" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-getstarted shadow-sm w-50">Изтриване</button>
                </div>

                <div class="form-group text-center mt-3">
                    <a asp-area="" asp-action="All" asp-controller="Product" class="btn btn-getstarted shadow-sm w-50">Връщане</a>
                </div>
            </form>
        </div>
    </div>
</div>